// Assignment 1- Q9-Pattern
#include <stdio.h>
int main() {
   int n=5,i,j,k;
   for(i=1;i<=n;i++){
       for(j=0;j<i;j++){
          if(j%2==0)
          printf("0");
          else
          printf("1");
       }
       
      k=2*(n-i);
        for(j=0;j<k;j++) {
            printf(" ");
        }

       for(j=9;j>=10-i;j--){
           if(j%2==0)
          printf("1");
          else
          printf("0");
       }
       printf("\n");
   }
    return 0;
}
