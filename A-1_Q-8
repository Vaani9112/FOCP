// Assignment 1- Q8-Pattern
#include <stdio.h>
#include<math.h>

int main() {
   int n,i,j;
   printf("Enter no. of lines:");
   scanf("%d",&n);
   for(i=1;i<=n;i++){
       for(j=i;j>0;j--){
          if(j%2==0)
          printf("0");
          else
          printf("1");
       }
       printf("\n");
   }
    return 0;
}
