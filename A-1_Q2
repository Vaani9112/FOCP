//Assignment-1 Q5-Perfect number
#include <stdio.h>
void perfect_num(int n){
    int i,sum=0;
    for(i=1;i<n;i++){
    if(n%i==0)
    sum=sum+i;
    }
    (sum==n)? printf("A perfect number."):printf("Not a perfect number.");
}
int main() {
    int a,b,n,temp=0;
    printf("Enter number:\n");
    scanf("%d",&n);
    perfect_num(n);
    return 0;
}
